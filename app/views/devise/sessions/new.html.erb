<div align="center" style="margin-bottom:20px;">
       <h1 class="logo" style="font-size:25px; font-weight:700; margin-top: 20px;">
       <a href="#"style="color:black; text-decoration:none;">AfterSquat</a>
   </h1>
</div> 

<div class="login" style="width:80%; margin:30px auto 0;">
<div class="col-md-8 col-md-offset-2">
  <div class="row">
    <div class="panel panel-default">


			<div class="panel-body">
				<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  	<div class="form-group">
			  		<%= f.email_field :email, placeholder: "이메일", autofocus: true, class: "form-control" %>
			  	</div>
			  	<div class="form-group">
			    	<%= f.password_field :password,placeholder: "비밀번호", autocomplete: "off", class: "form-control" %>
			    </div>


			  <div class="form-group">
			  	<%= f.submit "로그인", class: "btn-primary btn-sm btn-block"%>
			  </div>
			<% end %>
			</div>
		</div>
	</div>
	
	
	<!--   가운대정렬 간단가입    -->
	<div style="text-align: center;">
	<%= render "devise/shared/links" %>
	</div>
</div>
</div>
