<div data-role="header">
   <h1 class="logo" style="font-size:15px; font-weight:600;">
       <a href="/"style="color:black; text-decoration:none;">AfterSquat</a>
   </h1>
</div> 
       
       
<div  data-role="content" id="pic_box">
    <div class="masonry">
        <% @posts.each do |p|%>
            <a href="/posts/<%=p.id%>"><input class="item" type="image" src="<%=p.image_url%>" alt="{alternate text}" /></a>

        <% end %>
    </div>
</div>

          
          
    <div data-role="footer" data-position="fixed" data-fullscreen="true">
      <div data-role="navbar">
        <ul>
           <li>
            <% if user_signed_in?%>
            <a href="/<%=current_user.username%>" data-icon="user"></a>
            <%else%>
            <a href="/users/sign_in" data-icon="user"></a>
            <%end%>
            </li>
           <li><a href="/users/show" data-icon="camera"></a></li>
           <li>
            <% if user_signed_in?%>
              <a href="/posts/new" data-icon="edit"></a>
            <%else%>
            <a href="/users/sign_in" data-icon="check"></a>
            <%end%>
            </li>
       </ul>
      </div>
    </div> 
       
</div>




